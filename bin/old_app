#!/usr/bin/env ruby


require 'curses'
require_relative '../lib/task_engine'

def init_screen
  Curses.init_screen
  Curses.addstr("test")
  Curses.getch
  Curses.close_screen
end

if $0 == __FILE__
  engine = TaskEngine.new
  engine.tasklists.each_with_index { |tl, i|
    puts "#{i+1}. #{tl["title"]}"
  }

  print "> "
  a = gets.chomp

  engine.tasklists[a.to_i-1].tasks.each_with_index { |t, i|
    puts "#{i+1}. #{t["title"]}"
  }
  init_screen

end

